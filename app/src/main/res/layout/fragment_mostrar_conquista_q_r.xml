<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MostrarConquistaQRFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_parabens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parabéns! Você Coletou o "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="128dp"/>

        <TextView
            android:id="@+id/txt_nome_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mirante"
            android:textColor="@color/textselecao"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_parabens"
            android:layout_marginTop="32dp"/>

        <ImageView
            android:id="@+id/imagem_qr_conquista"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mirante_conquista"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_nome_qr"
            android:layout_marginTop="64dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do alto do mirante, com 1.568m, pode-se \navistar as cidades de Ouro Branco, \nConselheiro Lafaiete e Congonhas."
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagem_qr_conquista"
            android:layout_marginTop="80dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@color/barras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="13sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>