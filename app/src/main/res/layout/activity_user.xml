<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <View
        android:id="@+id/barrasuperior"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/barras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imagem_account"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barrasuperior"
        app:layout_constraintEnd_toStartOf="@id/imagem_trofeu"/>

    <View
        android:id="@+id/view_account"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/textselecao"
        app:layout_constraintStart_toStartOf="@id/imagem_account"
        app:layout_constraintEnd_toEndOf="@id/imagem_account"
        app:layout_constraintTop_toBottomOf="@id/imagem_account"/>

    <ImageView
        android:id="@+id/imagem_trofeu"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:src="@drawable/trofeu"
        app:layout_constraintStart_toEndOf="@id/imagem_account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imagem_path"
        app:layout_constraintBottom_toBottomOf="@id/barrasuperior"/>

    <View
        android:id="@+id/view_trofeu"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/textselecao"
        app:layout_constraintStart_toStartOf="@id/imagem_trofeu"
        app:layout_constraintEnd_toEndOf="@id/imagem_trofeu"
        app:layout_constraintTop_toBottomOf="@id/imagem_trofeu"/>


    <ImageView
        android:id="@+id/imagem_path"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:src="@drawable/path"
        app:layout_constraintStart_toEndOf="@id/imagem_trofeu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imagem_qrcode"
        app:layout_constraintBottom_toBottomOf="@id/barrasuperior"/>

    <View
        android:id="@+id/view_caminho"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/textselecao"
        app:layout_constraintStart_toStartOf="@id/imagem_path"
        app:layout_constraintEnd_toEndOf="@id/imagem_path"
        app:layout_constraintTop_toBottomOf="@id/imagem_path"/>

    <ImageView
        android:id="@+id/imagem_qrcode"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:src="@drawable/qrcode"
        app:layout_constraintStart_toEndOf="@id/imagem_path"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barrasuperior"/>

    <View
        android:id="@+id/view_qrcode"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/textselecao"
        app:layout_constraintStart_toStartOf="@id/imagem_qrcode"
        app:layout_constraintEnd_toEndOf="@id/imagem_qrcode"
        app:layout_constraintTop_toBottomOf="@id/imagem_qrcode"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_user"
        app:layout_constraintTop_toBottomOf="@id/barrasuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>